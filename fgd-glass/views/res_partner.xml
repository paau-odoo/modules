<odoo>
    <record id="res_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field
            name="arch" type="xml">
            <!-- Make the field read only or not based on the new field on res.partner -->
            <xpath expr="//group[@name='container_row_2']/group[@name='sale']/field[@name='user_id']" position='replace'>
                <field name="is_restricted" invisible="1"/>
                <field name="user_id" required="1" widget="many2one_avatar_user" readonly="is_restricted" domain="[('share', '=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>
