<odoo>
    <record id="view_partner_property_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.product.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="product.view_partner_property_form"/>
        <field
            name="arch" type="xml">
            <!-- Make the field read only or not based on the new field on res.partner -->
            <xpath expr="//field[@name='property_product_pricelist']" position='replace'>
                <field name="is_restricted" invisible="1"/>
                <field name="property_product_pricelist" groups="product.group_product_pricelist" readonly="is_restricted" invisible="not is_company and parent_id"/>
            </xpath>
        </field>
    </record>
</odoo>
