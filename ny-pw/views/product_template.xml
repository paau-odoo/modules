<odoo>
    <record id="product_template_form_view_case_price" model="ir.ui.view">
        <field name="name">product.template.form.case.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="pairs_per_case"/>
                <field name="price_per_pair"/>
            </xpath>
            <xpath expr="//field[@name='list_price']" position="attributes">
                <attribute name="attrs">
                    {'readonly':[('pairs_per_case','>','0'),('price_per_pair','>','0')]}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
