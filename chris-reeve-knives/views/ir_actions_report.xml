<odoo>
    <!-- Action for the filtered form export -->
    <record id="action_report_saleorder_filtered" model="ir.actions.report">
        <field name="name">Quotation / Order (Filtered)</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">chris-reeve-knives.report_saleorder_raw_filtered</field>
        <field name="report_file">chris-reeve-knives.report_saleorder_raw_filtered</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' %
            (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order" />
        <field name="binding_type">report</field>
    </record>
</odoo>